generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Artist {
  artist_id   Int       @id @default(autoincrement())
  artist_image String?  // This field is optional, hence the '?'
  name        String // 이름
  nationality String? // 국적
  profile         String? // 프로필
  website_url String?
  artworks    Artwork[] // Relation field
}

model Artwork {
  artwork_id    Int      @id @default(autoincrement())
  artist_id     Int     // 작가 id 
  title         String // 작품명
  image_url     String  // 작품 이미지
  descripton  String? //작품설명 
  createdAt     DateTime? // 생성일
  medium        String?  // 재료
  dimensions    String?  // 규격
  price         Float?   // 가격
  isSold        Boolean // 판매 여부
  artist        Artist   @relation(fields: [artist_id], references: [artist_id])
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  category     String
  price        Float
  material     String?
  color        String?
  size         String?
  details      String?
  precautions  String?
  mainImageUrl   String?   // Main image URL 
  seller       String
  stock        Int
  url          String?
  createdAt    DateTime @default(now())
  
 productImages     ProductImage[] // Relation field for additional images
}

model ProductImage {
    id          Int     @id @default(autoincrement())
    url         String // URL of the additional image stored in S3 
    productId   Int 
    product     Product @relation(fields: [productId], references: [id])
}