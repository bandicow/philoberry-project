generator client {
  provider = "prisma-client-js"
  log    = ["query", "info", "warn", "error"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Artist {
  artist_id   Int       @id @default(autoincrement())
  artist_image String?  // This field is optional
  name        String // 이름
  major       String? // 분야
  profile     String? // 작가 소개
  website_url String? // 작가 사이트
  artworks    Artwork[] // Relation field
}

model Artwork {
  artwork_id    Int      @id @default(autoincrement())
  artist_id     Int     // 작가 id 
  title         String // 작품명
  s3key     String  // 작품 이미지 연결 key
  descripton  String? //작품설명 
  createdAt     DateTime? // 생성일 ,필요한가?
  medium        String?  // 재료
  dimensions    String?  // 규격, 사이즈
  price         Float?   // 가격
  isSold        Boolean // 판매 여부
  order         Int // 작품순서
  artist        Artist   @relation(fields: [artist_id], references: [artist_id])
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String @unique
  category     String
  price        Float
  material     String?
  color        String?
  size         String?
  details      String?
  precautions  String?
  mainImage   String?   // Main image URL 
  seller       String
  stock        Int
  url          String?
  createdAt    DateTime @default(now())
  
 productImages     ProductImage[] // Relation field for additional images
}

model ProductImage {
    id          Int     @id @default(autoincrement())
    s3key         String // URL of the additional image stored in S3 
    productId   Int 
    product     Product @relation(fields: [productId], references: [id])
}

model Setting {
  id Int @id @default(100)
  backgroundColor String
}